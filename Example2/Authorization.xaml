<Page x:Class="Example2.Authorization"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Example2"
      mc:Ignorable="d" 
      d:DesignHeight="415" d:DesignWidth="800"
      Title="Authorization" Background="LightGray">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="Введите Логин " Width="350"></TextBlock>
        <TextBox Grid.Row="1" x:Name="Login" Width="350"></TextBox>
        <TextBlock Grid.Row="2" Text="Введите пароль " Width="350"/>
        <TextBox Grid.Row="3" x:Name="Password" Width="350"></TextBox>
        <Button Grid.Row="5" Click="Enter" Content="Войти" Width="350"/>
    </Grid>
</Page>
